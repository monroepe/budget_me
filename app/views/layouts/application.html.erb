<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>BudgetMe</title>

    <%= include_gon %>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="contain-to-grid sticky">
    <nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "BudgetMe", root_path %></h1>
    </li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
    <% if current_user %>
      <li class="active" id="user_name"><%= current_user.first_name %></li>
    <% end %>
      <li class="has-dropdown">
      <% if current_user %>
        <a href="#">Settings</a>
        <ul class="dropdown">
          <li><%= link_to "Settings", edit_user_registration_path %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, data: {method: 'delete'} %></li>
        </ul>
      <% else %>
        <a href="#">Sign In</a>
        <ul class="dropdown">
          <li><li><%= link_to "Sign in", new_user_session_path %></li></li>
          <li><%= link_to "Create Account",new_user_registration_path %></li>
        </ul>
      <% end %>
      </li>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
    <% if  current_user && current_user.budget && current_user.budget.id %>
      <li><%= link_to "My Budget", user_budget_path(current_user, current_user.budget) %></li>
    <% elsif current_user %>
      <li><%= link_to "My Budget", new_user_budget_path(current_user) %></li>
    <% end %>
    </ul>
  </section>
</nav>
</div>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

    <div class="row">
      <div class="small-12 columns">

        <%= yield %>
      </div>
    </div>

    <%= javascript_include_tag "application" %>
  </body>
</html>
