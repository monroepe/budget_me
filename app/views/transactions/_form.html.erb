<%= simple_form_for [current_user, @transaction] do |f| %>

  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p class="form-field">
    <%= f.input :type, collection: ["Expense", "Income"], as: :radio_buttons, required: true, class: "same-line" %>

    <%= f.input :date, as: :string, input_html: { class: "datepicker" }, label: "Transaction Date" %>

    <%= f.input :name %>

    <%= f.input :amount %>

    <%= f.association :category, collection: Category.all, prompt: "Choose a Category" %>
  </p>

  <p class="form-field">
    <%= f.input :description %>
  </p>

  <p class="form-field">
    <%= f.button :submit %>
  </p>
<% end %>
